{
  "name": "llguidance-js",
  "version": "0.1.0",
  "description": "Structured output generation for transformer.js using llguidance",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build crates/llguidance-wasm --target bundler --out-dir ../../pkg && node scripts/create-env-shim.cjs",
    "build": "npm run build:wasm && vite build",
    "dev": "vite",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llm",
    "transformers",
    "structured-output",
    "grammar",
    "json-schema",
    "webassembly",
    "wasm"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/llguidance-js"
  },
  "devDependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-top-level-await": "^1.4.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@huggingface/transformers": "^3.8.1"
  },
  "peerDependenciesMeta": {
    "@huggingface/transformers": {
      "optional": true
    }
  }
}
