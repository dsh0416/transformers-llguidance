{
  "name": "transformers-llguidance",
  "version": "0.0.1",
  "description": "Structured output generation for transformers.js using llguidance",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build crates/llguidance-wasm --target bundler --out-dir ../../pkg && node scripts/create-env-shim.cjs",
    "build": "npm run build:wasm && vite build",
    "dev": "vite",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llm",
    "transformers",
    "structured-output",
    "grammar",
    "json-schema",
    "webassembly",
    "wasm"
  ],
  "author": "Delton Ding",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dsh0416/transformer-llguidance.js"
  },
  "devDependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@types/node": "22.18.0",
    "@vitest/coverage-v8": "^4.0.17",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-top-level-await": "^1.4.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "@huggingface/transformers": "^3.8.1"
  },
  "peerDependenciesMeta": {
    "@huggingface/transformers": {
      "optional": true
    }
  }
}
